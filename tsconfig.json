{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false, //
    "noImplicitAny": false, // 
    "strictNullChecks": false, //
    "esModuleInterop": true, // true
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*","src/types","tests"],
  "exclude": ["node_modules"]
}